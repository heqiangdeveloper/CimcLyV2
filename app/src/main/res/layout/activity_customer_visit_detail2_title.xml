<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:navigationIcon="@null"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:fitsSystemWindows="true"
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:src="@mipmap/ic_back"/>

            <TextView
                android:id="@+id/titleName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="拜访详情"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_customer_visit_title_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingRight="10dip"
                android:text="●●●"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"/>
            <Spinner
                android:background="@color/colorPrimaryDark"
                android:layout_alignParentRight="true"
                android:id="@+id/who_spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:popupBackground="@color/colorPrimary"
                android:entries="@array/whos"
                android:visibility="gone"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/who_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="我的"
                    android:textColor="@color/black_3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/xs_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="我下属的"
                    android:textColor="@color/black_3"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:orientation="horizontal">

                <View
                    android:id="@+id/my_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark" />

                <View
                    android:id="@+id/xs_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/status_ll"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/status_bt_sanjiao"
                    android:layout_width="12dp"
                    android:layout_height="30dip"
                    android:background="@color/white"
                    android:text="▼"
                    android:textColor="@color/colorPrimaryDark" />
                <Button
                    android:id="@+id/status_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginRight="2dip"
                    android:background="@color/white"
                    android:text="状态"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <EditText
                android:id="@+id/search_et"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="输入搜索内容"
                android:paddingLeft="10dip"
                android:textColor="@color/black_33"
                android:textColorHint="@color/black_33"
                android:textSize="14sp" />

            <Button
                android:id="@+id/search_bt"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="2dip"
                android:background="@color/white"
                android:text="搜索"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.AppBarLayout>