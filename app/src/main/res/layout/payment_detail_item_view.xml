<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_rl"
        android:layout_marginTop="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="订单id"
                android:textColor="@color/black_33"
                android:textSize="@dimen/customer_visit_detail_text_size"/>

            <TextView
                android:id="@+id/order_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right"
                android:padding="8dip"
                android:drawableRight="@mipmap/white_icon"
                android:drawablePadding="@dimen/customer_visit_detail_drawable_padding"
                android:textColorHint="@color/alpha30"
                android:textColor="@color/black"
                android:textSize="@dimen/customer_visit_detail_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/customer_visit_detail_diff_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="合同号"
                android:textColor="@color/black_33"
                android:textSize="@dimen/customer_visit_detail_text_size"/>

            <TextView
                android:id="@+id/agree_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right"
                android:padding="8dip"
                android:drawableRight="@mipmap/white_icon"
                android:drawablePadding="@dimen/customer_visit_detail_drawable_padding"
                android:textColorHint="@color/alpha30"
                android:textColor="@color/black"
                android:textSize="@dimen/customer_visit_detail_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/customer_visit_detail_diff_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="客户名称"
                android:textColor="@color/black_33"
                android:textSize="@dimen/customer_visit_detail_text_size"/>

            <TextView
                android:id="@+id/cust_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right"
                android:padding="8dip"
                android:drawableRight="@mipmap/white_icon"
                android:drawablePadding="@dimen/customer_visit_detail_drawable_padding"
                android:textColorHint="@color/alpha30"
                android:textColor="@color/black"
                android:textSize="@dimen/customer_visit_detail_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/customer_visit_detail_diff_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="付款行"
                android:textColor="@color/black_33"
                android:textSize="@dimen/customer_visit_detail_text_size"/>

            <TextView
                android:id="@+id/pay_bank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right"
                android:padding="8dip"
                android:drawableRight="@mipmap/white_icon"
                android:drawablePadding="@dimen/customer_visit_detail_drawable_padding"
                android:textColorHint="@color/alpha30"
                android:textColor="@color/black"
                android:textSize="@dimen/customer_visit_detail_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/customer_visit_detail_diff_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="付款方式"
                android:textColor="@color/black_33"
                android:textSize="@dimen/customer_visit_detail_text_size"/>

            <TextView
                android:id="@+id/pay_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right"
                android:padding="8dip"
                android:drawableRight="@mipmap/white_icon"
                android:drawablePadding="@dimen/customer_visit_detail_drawable_padding"
                android:textColorHint="@color/alpha30"
                android:textColor="@color/black"
                android:textSize="@dimen/customer_visit_detail_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/customer_visit_detail_diff_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="币种"
                android:textColor="@color/black_33"
                android:textSize="@dimen/customer_visit_detail_text_size"/>

            <TextView
                android:id="@+id/money_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right"
                android:padding="8dip"
                android:drawableRight="@mipmap/white_icon"
                android:drawablePadding="@dimen/customer_visit_detail_drawable_padding"
                android:textColorHint="@color/alpha30"
                android:textColor="@color/black"
                android:textSize="@dimen/customer_visit_detail_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/customer_visit_detail_diff_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="支付金额"
                android:textColor="@color/black_33"
                android:textSize="@dimen/customer_visit_detail_text_size"/>

            <TextView
                android:id="@+id/pay_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right"
                android:padding="8dip"
                android:drawableRight="@mipmap/white_icon"
                android:drawablePadding="@dimen/customer_visit_detail_drawable_padding"
                android:textColorHint="@color/alpha30"
                android:textColor="@color/black"
                android:textSize="@dimen/customer_visit_detail_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/customer_visit_detail_diff_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="支付日期"
                android:textColor="@color/black_33"
                android:textSize="@dimen/customer_visit_detail_text_size"/>

            <TextView
                android:id="@+id/pay_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right"
                android:padding="8dip"
                android:drawableRight="@mipmap/white_icon"
                android:drawablePadding="@dimen/customer_visit_detail_drawable_padding"
                android:textColorHint="@color/alpha30"
                android:textColor="@color/black"
                android:textSize="@dimen/customer_visit_detail_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="12dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/depositAmount_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:padding="5dip"
                android:text="银行入账定金"
                android:textColor="@color/black_33" />
            <TextView
                android:id="@+id/residualAmount_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:padding="5dip"
                android:text="银行入账尾款"
                android:textColor="@color/black_33" />

            <TextView
                android:id="@+id/strikeMoney_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:padding="5dip"
                android:text="采购抵充"
                android:textColor="@color/black_33" />
            <TextView
                android:id="@+id/paymentarrears_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:padding="5dip"
                android:text="三方协议抵充"
                android:textColor="@color/black_33" />

            <TextView
                android:id="@+id/handoffMoney_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:padding="5dip"
                android:text="手工充账"
                android:textColor="@color/black_33" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/customer_visit_detail_diff_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="对账日期"
                android:textColor="@color/black_33"
                android:textSize="@dimen/customer_visit_detail_text_size"/>

            <TextView
                android:id="@+id/check_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right"
                android:padding="8dip"
                android:drawableRight="@mipmap/white_icon"
                android:drawablePadding="@dimen/customer_visit_detail_drawable_padding"
                android:textColorHint="@color/alpha30"
                android:textColor="@color/black"
                android:textSize="@dimen/customer_visit_detail_text_size"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
